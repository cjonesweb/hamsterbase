= form_for @meta_datum do |f|
  - if @meta_datum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meta_datum.errors.count, "error")} prohibited this metadatum from being saved:"
      %ul
        -  @meta_datum.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :stash_id
  .field
    = hidden_field_tag :came_from_stash, TRUE
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'